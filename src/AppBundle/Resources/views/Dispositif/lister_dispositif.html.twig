{% extends 'AppBundle::base.html.twig' %}
{% block title %}
    Liste des dispositifs
{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('bundles/app/plugins/bower_components/footable/css/footable.core.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/app/plugins/bower_components/Magnific-Popup-master/dist/magnific-popup.css') }}" rel="stylesheet">
{% endblock %}

{% block content %}
    <div id="page-wrapper">
        <div class="container-fluid">
            <div class="row bg-title">
                <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                    <h4 class="page-title">Dispositis</h4></div>
                <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
                    <ol class="breadcrumb">
                        <li><a href="#">Accueil</a></li>
                        <li><a href="#">Dispositifs</a></li>
                        <li class="active">Liste des dispositifs</li>
                    </ol>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- .row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="white-box">
                        <h3 class="box-title m-b-0">Liste des Dispositifs</h3>
                        <label class="form-inline">Afficher
                            <select id="demo-show-entries" class="form-control input-sm">
                                <option value="5">5</option>
                                <option value="10">10</option>
                                <option value="15">15</option>
                                <option value="20">20</option>
                            </select> entrés </label>
                        <table id="demo-foo-pagination" class="table color-table primary-table m-b-0 toggle-arrow-tiny"
                               data-page-size="5">
                            <thead>
                            <tr>
                                <th data-toggle="true"> Modéle</th>
                                <th> OS</th>
                                <th data-hide="phone"> Version OS</th>
                                <th data-hide="phone"> Processeur</th>
                                <th data-hide="phone"> Ram</th>
                                <th data-hide="phone"> Résolution</th>
                                <th data-hide="all"> Images</th>
                                <th data-hide="phone"> Statut</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for dispositif in dispositifs %}
                                <tr>
                                    <td>{{ dispositif.modele }}</td>
                                    <td>{{ dispositif.os }}</td>
                                    <td>{{ dispositif.versionOS }}</td>
                                    <td>{{ dispositif.processeur }}</td>
                                    <td>{{ dispositif.ram }} GB</td>
                                    <td>{{ dispositif.resolution }}</td>
                                    <td>
                                        <div class="row el-element-overlay m-b-40">
                                             {% for image in dispositif.images %}
                                            <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                                <div class="white-box">
                                                    <div class="el-card-item">
                                                        <div class="el-card-avatar el-overlay-1">
                                                            <img src="{{app.request.basepath}}/bundles/app/uploads/documents/{{ image.fileName }}"/>
                                                            <div class="el-overlay">
                                                                <ul class="el-info">
                                                                    <li>
                                                                        <a class="btn default btn-outline image-popup-vertical-fit"
                                                                           href="{{ asset('bundles/app/uploads/documents/4.jpeg') }}"><i
                                                                                    class="icon-magnifier"></i></a></li>
                                                                </ul>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            {% endfor %}
                                        </div>
                                    </td>
                                    <td><span class="label label-table label-success">Active</span></td>
                                </tr>
                            {% endfor %}
                            </tbody>
                            <tfoot>
                            <tr>
                                <td colspan="5">
                                    <div class="text-right">
                                        <ul class="pagination pagination-split m-t-30"></ul>
                                    </div>
                                </td>
                            </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
        <footer class="footer text-center"> 2017 &copy; Elite Admin brought to you by themedesigner.in</footer>
    </div>
{% endblock %}

{% block scripts %}
    <script src="{{ asset('bundles/app/plugins/bower_components/footable/js/footable.all.min.js') }}"></script>
    {#<script src="{{ asset('bundles/app/plugins/bower_components/bootstrap-select/bootstrap-select.min.js') }}" type="text/javascript"></script>#}
    <!--FooTable init-->
    <script src="{{ asset('bundles/app/assets/js/footable-init.js') }}"></script>
    <script src="{{ asset('bundles/app/plugins/bower_components/Magnific-Popup-master/dist/jquery.magnific-popup.min.js') }}"></script>
    <script src="{{ asset('bundles/app/plugins/bower_components/Magnific-Popup-master/dist/jquery.magnific-popup-init.js') }}"></script>
{% endblock %}



