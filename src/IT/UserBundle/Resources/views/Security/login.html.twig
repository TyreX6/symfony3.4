{% extends "FOSUserBundle::layout.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}
{% block title %}Login{% endblock %}
{% block fos_user_content %}
    {% trans_default_domain 'FOSUserBundle' %}
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" type="image/png" sizes="16x16" href="{{ asset('favicon.ico') }}">
    <!-- Bootstrap Core CSS -->
    <!-- animation CSS -->
    <!-- Custom CSS -->
    <!-- color CSS -->
    {% stylesheets
    'bundles/itreservation/app/assets/bootstrap/dist/css/bootstrap.min.css'
    'bundles/itreservation/app/plugins/bower_components/bootstrap-extension/css/bootstrap-extension.css'
    'bundles/itreservation/app/assets/css/animate.css'
    'bundles/itreservation/app/assets/css/style.css'
    'bundles/itreservation/app/assets/css/colors/default-dark.css'
    'bundles/itreservation/app/assets/css/personalized.css'
    filter='cssrewrite' %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}

    <div class="LoadingRoot">
        <div class="content">
            <div class="ball"></div>
            <div class="ball1"></div>
        </div>
    </div>
    <section id="wrapper" class="login-register">
        <div class="login-box">
            <div class="white-box">
                {% if error %}
                    <h2 class="center-block">VÃ©rifier votre mot de passe</h2>
                {% endif %}
                <form class="form-horizontal form-material" id="loginform"
                      action="{{ path("fos_user_security_check") }}" method="POST">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
                    <div class="form-group">
                        <div class="col-xs-12 text-center">
                            <div class="user-thumb text-center"><img alt="thumbnail" class="img-circle" width="100" src="{{ asset('bundles/itreservation/app/plugins/images/users/semh.jpg') }}">
                                <h3>Administrateur</h3>
                            </div>
                        </div>
                    </div>
                    <div class="form-group ">
                        <div class="col-xs-12">
                            <input type="hidden" id="username" name="_username" placeholder="Username"
                                   required="required" value="admin" class="form-control placeholder-no-fix"/>
                            <input class="form-control" type="password" name="_password" required=""
                                   placeholder="Password">
                        </div>
                    </div>
                    <div class="form-group text-center">
                        <div class="col-xs-12">
                            <button class="btn btn-info btn-lg btn-block text-uppercase waves-effect waves-light"
                                    type="submit">Login
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>

    <!-- jQuery -->
    <script src="{{ asset('bundles/itreservation/app/plugins/bower_components/jquery/dist/jquery.min.js') }}"></script>
    <!-- Bootstrap Core JavaScript -->
    {#<script src="{{ asset('bundles/itreservation/app/assets/bootstrap/dist/js/tether.min.js') }}"></script>#}
