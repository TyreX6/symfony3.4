    <!--Wave Effects -->
    {#<script src="{{ asset('bundles/itreservation/app/assets/js/waves.js') }}"></script>#}
    <!-- Custom Theme JavaScript -->
    <script src="{{ asset('bundles/itreservation/app/assets/js/custom.js') }}"></script>
{% endblock fos_user_content %}
