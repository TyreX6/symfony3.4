{% extends '::base.html.twig' %}
{% block title %}
    Liste des dispositifs
{% endblock %}

{% block stylesheets %}
    {% stylesheets
    'bundles/itreservation/app/plugins/bower_components/footable/css/footable.core.css'
    filter='cssrewrite' %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block content %}
    <div id="page-wrapper">
        <div class="container-fluid">
            <div class="row bg-title">
                <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                    <h4 class="page-title">Stylish Tabs</h4></div>
                <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
                    <ol class="breadcrumb">
                        <li><a href="#">Dashboard</a></li>
                        <li><a href="#">Ui Elements</a></li>
                        <li class="active">Stylish Tabs</li>
                    </ol>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- .row -->
            <div class="row">
                <div class="col-md-12">
                    <div class="white-box">
                        <!-- Tabstyle start -->
                        <h3 class="box-title m-b-0 m-t-40">Résultat de recherche pour :</h3> <code>{{ keyword }}</code>
                        <section class="m-t-40">
                            <div class="sttabs tabs-style-iconbox">
                                <nav>
                                    <ul>
                                        <li><a href="#section-iconbox-1"><h3>Dispositifs</h3></a></li>
                                        <li><a href="#section-iconbox-2"><h3>Réservations</h3></a></li>
                                    </ul>
                                </nav>
                                <div class="content-wrap">
                                    <section id="section-iconbox-1">
                                        <h3>{{ dispositifs|length }} résulats .</h3>
                                        <label class="form-inline">Afficher
                                            <select id="demo-show-entries" class="form-control input-sm">
                                                <option value="10">10</option>
                                                <option value="15">15</option>
                                                <option value="20">20</option>
                                            </select> entrés </label>
                                        <table id="demo-foo-pagination" class="table color-table info-table m-b-0 toggle-arrow-tiny"
                                               data-page-size="10">
                                            <thead>
                                            <tr>
                                                <th data-toggle="true"> Modéle</th>
                                                <th> OS</th>
                                                <th data-hide="phone"> Version OS</th>
                                                <th data-hide="phone"> Processeur</th>
                                                <th data-hide="phone"> Ram</th>
                                                <th data-hide="phone"> Résolution</th>
                                                <th data-hide="phone"> Statut</th>
                                                <th data-hide="phone"> Localiser</th>
                                                <th data-hide="phone">Verrouiller</th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            {% for dispositif in dispositifs %}
                                                <tr>
                                                    <td>
                                                        <a href="{{ path('modifier_dispositif',{'id':dispositif.id}) }}">{{ dispositif.model }}</a>
                                                    </td>
                                                    <td>{{ dispositif.os }}</td>
                                                    <td>{{ dispositif.OsVersion }}</td>
                                                    <td>{{ dispositif.cpu }}</td>
                                                    <td>{{ dispositif.ram }} GB</td>
                                                    <td>{{ dispositif.resolution }}</td>
                                                    <td>
                                                        {% if dispositif.status == "Fonctionnel" %}
                                                            <span class="label label-table label-success">{{ dispositif.status }}</span>
                                                        {% elseif dispositif.status == "Détruit" %}
                                                            <span class="label label-table label-danger">{{ dispositif.status }}</span>
                                                        {% else %}
                                                            <span class="label label-table label-warning">{{ dispositif.status }}</span>
                                                        {% endif %}
                                                    </td>
                                                    <td>
                                                        {% if dispositif.status == "Fonctionnel" %}
                                                            <a href="{{ path('localiser_dispositif',{'id':dispositif.id}) }}">
                                                                <button class="btn btn-block btn-outline btn-primary">Localiser</button>
                                                            </a>
                                                        {% else %}
                                                            <a href="#">
                                                                <button class="btn btn-block btn-outline btn-primary" disabled>Localiser</button>
                                                            </a>
                                                        {% endif %}
                                                    </td>
                                                    <td>
                                                        {% if dispositif.status == "Fonctionnel" %}
                                                            <a href="{{ path('localiser_dispositif',{'id':dispositif.id}) }}">
                                                                <button class="btn btn-block btn-outline btn-danger">Verrouiller</button>
                                                            </a>
                                                        {% else %}
                                                            <a href="#">
                                                                <button class="btn btn-block btn-outline btn-danger" disabled>Verrouiller</button>
                                                            </a>
                                                        {% endif %}
                                                    </td>
                                                </tr>
                                            {% endfor %}
                                            </tbody>
                                            <tfoot>
                                            <tr>
                                                <td colspan="5">
                                                    <div class="text-right">
                                                        <ul class="pagination pagination-split m-t-30"></ul>
                                                    </div>
                                                </td>
                                            </tr>
                                            </tfoot>
                                        </table>
                                    </section>
                                    <section id="section-iconbox-2">
                                        <h3>{{ reservations|length }} résulats .</h3>
                                        <label class="form-inline">Afficher
                                            <select id="demo-show-entries" class="form-control input-sm">
                                                <option value="10">10</option>
                                                <option value="15">15</option>
                                                <option value="20">20</option>
                                            </select> entrées </label>
                                        <table id="demo-foo-pagination" class="table color-table info-table m-b-0 toggle-arrow-tiny"
                                               data-page-size="10">
                                            <thead>
                                            <tr>
                                                <th> ID</th>
                                                <th data-toggle="true"> Modéle</th>
                                                <th> Date début</th>
                                                <th data-hide="phone"> Date fin</th>
                                                <th data-hide="phone"> Collaborateur</th>
                                                <th data-hide="phone"> Pourcentage</th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            {% for reservation in reservations %}
                                                <tr>
                                                    <td>
                                                        {{ reservation.dispositif.id }}
                                                    </td>
                                                    <td>
                                                        <a href="{{ path('modifier_dispositif',{'id':reservation.dispositif.id}) }}">{{ reservation.dispositif.model }}</a>
                                                    </td>
                                                    <td>{{ reservation.dateDebut | date }}</td>
                                                    <td>{{ reservation.dateFin | date }}</td>
                                                    <td>{{ reservation.user.username }}</td>
                                                    <td>
                                                            <div>
                                                                <p><strong>{{ reservation.dispositif.model }}</strong> <span class="pull-right text-muted">{{ reservation.getPourcentage["pourcentage"]}}% Complete</span>
                                                                </p>
                                                                <div class="progress progress-striped active">
                                                                    <div class="progress-bar progress-bar-{{ reservation.getPourcentage["class"]}}" role="progressbar"
                                                                         aria-valuenow="{{ reservation.getPourcentage["pourcentage"]}}" aria-valuemin="0" aria-valuemax="100"
                                                                         style="width: {{ reservation.getPourcentage["pourcentage"]}}%">
                                                                    </div>
                                                                </div>
                                                            </div>

                                                    </td>
                                                </tr>
                                            {% endfor %}
                                            </tbody>
                                            <tfoot>
                                            <tr>
                                                <td colspan="5">
                                                    <div class="text-right">
                                                        <ul class="pagination pagination-split m-t-30"></ul>
                                                    </div>
                                                </td>
                                            </tr>
                                            </tfoot>
                                        </table>

                                    </section>

                                </div>
                                <!-- /content -->
                            </div>
                            <!-- /tabs -->
                        </section>
                        <hr>
                    </div>
                </div>
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
        <footer class="footer text-center"> 2017 &copy; Elite Admin brought to you by themedesigner.in</footer>
    </div>
{% endblock %}

{% block scripts %}
    {% javascripts
    '@ITReservationBundle/Resources/public/app/plugins/bower_components/footable/js/footable.all.min.js'
    '@ITReservationBundle/Resources/public/app/assets/js/footable-init.js'
    '@ITReservationBundle/Resources/public/app/assets/js/cbpFWTabs.js'
    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script type="text/javascript">
        (function() {
            [].slice.call(document.querySelectorAll('.sttabs')).forEach(function(el) {
                new CBPFWTabs(el);
            });
        })();
    </script>
{% endblock %}
