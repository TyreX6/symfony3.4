{% extends '::base.html.twig' %}
{% block title %}
    Liste des dispositifs
{% endblock %}

{% block stylesheets %}
    {% stylesheets
    'bundles/itreservation/app/plugins/bower_components/footable/css/footable.core.css'
    'bundles/itreservation/app/plugins/bower_components/Magnific-Popup-master/dist/magnific-popup.css'
    filter='cssrewrite' %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block gestion_dispositifs %}
    <a href="#" class="waves-effect active"><i class="icon-screen-smartphone fa-fw" data-icon="v"></i>
        <span class="hide-menu"> Gestion Dispositifs <span class="fa arrow"></span></span></a>
{% endblock %}

{% block content %}
    <div id="page-wrapper">
        <div class="container-fluid">
            <div class="row bg-title">
                <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                    <h4 class="page-title">Dispositis</h4></div>
                <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
                    <ol class="breadcrumb">
                        <li><a href="#">Accueil</a></li>
                        <li><a href="#">Dispositifs</a></li>
                        <li class="active">Liste des dispositifs</li>
                    </ol>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- .row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="white-box">
                        <h3 class="box-title m-b-0">Liste des Dispositifs</h3>
                        <label class="form-inline">Afficher
                            <select id="demo-show-entries" class="form-control input-sm">
                                <option value="10">10</option>
                                <option value="15">15</option>
                                <option value="20">20</option>
                            </select> entrés </label>
                        <table id="demo-foo-pagination" class="table color-table info-table m-b-0 toggle-arrow-tiny"
                               data-page-size="10">
                            <thead>
                            <tr>
                                <th data-toggle="true"> Modéle</th>
                                <th> OS</th>
                                <th data-hide="phone"> Version OS</th>
                                <th data-hide="phone"> Processeur</th>
                                <th data-hide="phone"> Ram</th>
                                <th data-hide="phone"> Résolution</th>
                                <th data-hide="phone"> Statut</th>
                                <th data-hide="phone"> Localiser</th>
                                <th data-hide="phone">Verrouiller</th>
                                <th data-hide="all"> Images</th>
                                <th data-hide="all"> Applications</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for dispositif in dispositifs %}
                                <tr>
                                    <td>
                                        <a href="{{ path('modifier_dispositif',{'id':dispositif.id}) }}">{{ dispositif.modele }}</a>
                                    </td>
                                    <td>{{ dispositif.os }}</td>
                                    <td>{{ dispositif.versionOS }}</td>
                                    <td>{{ dispositif.processeur }}</td>
                                    <td>{{ dispositif.ram }} GB</td>
                                    <td>{{ dispositif.resolution }}</td>
                                    <td>
                                        {% if dispositif.etat == "Fonctionnel" %}
                                            <span class="label label-table label-success">{{ dispositif.etat }}</span>
                                        {% elseif dispositif.etat == "Détruit" %}
                                            <span class="label label-table label-danger">{{ dispositif.etat }}</span>
                                        {% else %}
                                            <span class="label label-table label-warning">{{ dispositif.etat }}</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if dispositif.etat == "Fonctionnel" %}
                                        <a href="{{ path('localiser_dispositif',{'id':dispositif.id}) }}">
                                            <button class="btn btn-block btn-outline btn-primary">Localiser</button>
                                        </a>
                                        {% else %}
                                        <a href="#">
                                            <button class="btn btn-block btn-outline btn-primary" disabled>Localiser</button>
                                        </a>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if dispositif.etat == "Fonctionnel" %}
                                        <a href="{{ path('localiser_dispositif',{'id':dispositif.id}) }}">
                                            <button class="btn btn-block btn-outline btn-danger">Verrouiller</button>
                                        </a>
                                        {% else %}
                                        <a href="#">
                                            <button class="btn btn-block btn-outline btn-danger" disabled>Verrouiller</button>
                                        </a>
                                        {% endif %}
                                    </td>
                                    {#<td>#}
                                        {#<div class="row el-element-overlay m-b-40">#}
                                            {#{% for image in dispositif.images %}#}
                                                {#<div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">#}
                                                    {#<div class="white-box">#}
                                                        {#<div class="el-card-item">#}
                                                            {#<div class="el-card-avatar el-overlay-1"><img#}
                                                                        {#src="{{ image.path }}{{ image.fileName }}"/>#}
                                                                {#<div class="el-overlay">#}
                                                                    {#<ul class="el-info">#}
                                                                        {#<li><a target="_blank"#}
                                                                               {#class="btn default btn-outline"#}
                                                                               {#href="{{ image.path }}{{ image.fileName }}"><i#}
                                                                                        {#class="icon-link"></i></a></li>#}
                                                                    {#</ul>#}
                                                                {#</div>#}
                                                            {#</div>#}
                                                        {#</div>#}
                                                    {#</div>#}
                                                {#</div>#}
                                            {#{% endfor %}#}
                                        {#</div>#}
                                    {#</td>#}
                                    <td>
                                        <ul class="row el-element-overlay m-b-40">
                                            {% for app in dispositif.apps %}
                                                <li class="col-md-12 col-sm-12 col-xs-12">
                                                {{ app.name }}
                                                </li>
                                            {% endfor %}
                                        </ul>
                                    </td>

                                </tr>
                            {% endfor %}
                            </tbody>
                            <tfoot>
                            <tr>
                                <td colspan="5">
                                    <div class="text-right">
                                        <ul class="pagination pagination-split m-t-30"></ul>
                                    </div>
                                </td>
                            </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
        <footer class="footer text-center"> 2017 &copy; Elite Admin brought to you by themedesigner.in</footer>
    </div>
{% endblock %}

{% block scripts %}
    {% javascripts
    '@ITReservationBundle/Resources/public/app/plugins/bower_components/footable/js/footable.all.min.js'
    '@ITReservationBundle/Resources/public/app/assets/js/footable-init.js'

    '@ITReservationBundle/Resources/public/app/plugins/bower_components/Magnific-Popup-master/dist/jquery.magnific-popup.min.js'
    '@ITReservationBundle/Resources/public/app/plugins/bower_components/Magnific-Popup-master/dist/jquery.magnific-popup-init.js'
    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <!--FooTable init-->
    <!-- Custom Theme JavaScript -->
{% endblock %}



